{
	"schemaVersion": 1,
	"id": "indium",
	"version": "${version}",
	"name": "Indium",
	"description": "Sodium addon providing support for the Fabric Rendering API, based on Indigo",
	"authors": [
		"comp500",
		"spiralhalo"
	],
	"contact": {
		"sources": "https://github.com/comp500/Indium",
		"homepage": "https://modrinth.com/mod/indium",
		"issues": "https://github.com/comp500/Indium/issues"
	},
	"license": "Apache-2.0",
	"icon": "assets/indium/icon.png",
	"environment": "client",
	"custom": {
		"fabric-renderer-api-v1:contains_renderer": true
	},
	"entrypoints": {
		"client": [
			"link.infra.indium.Indium"
		]
	},
	"mixins": [
		"indium.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.8.0",
		"minecraft": "~1.18.2",
		"sodium": "0.4.1",
		"fabric-renderer-api-v1": ">=0.3.0",
		"fabric-resource-loader-v0": ">=0.4.0"
	}
}
